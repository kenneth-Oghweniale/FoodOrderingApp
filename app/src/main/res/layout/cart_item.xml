<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="UseSwitchCompatOrMaterialXml">

    <Button
        android:id="@+id/decrement"
        android:layout_width="26dp"
        android:layout_height="38dp"
        android:drawablePadding="2dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:text="-"
        android:textColor="@color/black"
        app:cornerRadius="8dp"
        app:iconPadding="0dp"
        app:layout_constraintStart_toStartOf="@+id/cartPrice"
        app:layout_constraintTop_toBottomOf="@+id/cartPrice" />

    <TextView
        android:id="@+id/cartPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppinsregular"
        android:text="â‚¦3700.00"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/cartFoodTitle"
        app:layout_constraintTop_toBottomOf="@+id/cartFoodTitle" />

    <TextView
        android:id="@+id/view_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppinsregular"
        android:text="View Details"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/button_close"
        app:layout_constraintTop_toBottomOf="@+id/cartPrice" />

    <TextView
        android:id="@+id/cartFoodTitle"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppinsemibold"
        android:text="Veg. Soup &amp; Fufu"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/cart_image"
        app:layout_constraintTop_toTopOf="@+id/cart_image" />

    <TextView
        android:id="@+id/qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppinsemibold"
        android:text="1"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/decrement"
        app:layout_constraintTop_toTopOf="@+id/decrement" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="146dp" />

    <ImageView
        android:id="@+id/cart_image"
        android:layout_width="91dp"
        android:layout_height="110dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/meal1_foreground" />

    <ImageView

        android:id="@+id/button_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cartFoodTitle"
        app:srcCompat="@drawable/ic_close" />

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintTop_toBottomOf="@+id/cart_image"
        tools:layout_editor_absoluteX="1dp" />

    <Button
        android:id="@+id/increment"
        android:layout_width="26dp"
        android:layout_height="38dp"
        android:layout_marginStart="10dp"
        android:drawablePadding="2dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:text="+"
        android:textColor="@color/black"
        app:cornerRadius="8dp"
        app:iconPadding="0dp"
        app:layout_constraintStart_toEndOf="@+id/qty"
        app:layout_constraintTop_toTopOf="@+id/decrement" />

</androidx.constraintlayout.widget.ConstraintLayout>